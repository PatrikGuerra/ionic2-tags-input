{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "outDir": "dist-final",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "core-js"
    ],
    "declaration": true
  },
  "include": [
    "dist/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/**/*"
  ]
}
